alias dn='dnote'
alias dna='dnote add'
alias n='note'
alias na='note add'
alias cat='bat'
alias ba='buku -a'
alias bd='buku -d'
alias bw='buku -w'
alias bt='buku -t'
alias bp='buku -p'

